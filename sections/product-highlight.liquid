{% schema %}
  {
    "name": "Product Highlight",
    "settings": [
      {
        "type": "image_picker",
        "id": "imageLeft",
        "label": "Left Image"
      },
      {
        "type": "text",
        "id": "button_labelLeft",
        "label": "Left Button label"
      },
      {
        "type": "color",
        "id": "button_labelLeft_color",
        "label": "Left Button Label Color",
        "default": "#FFFFFF"
      },
      {
        "type": "url",
        "id": "button_linkLeft",
        "label": "Left Button link"
      }, {
        "type": "image_picker",
        "id": "imageRight",
