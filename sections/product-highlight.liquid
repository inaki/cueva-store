<section class="w-full h-[50vh] grid grid-cols-5 border-b border-black p-0 m-0">
  <!-- Image 1 -->
  <div
    class="relative border-r border-black overflow-hidden h-full">
    <img
      src="{{ section.settings.image1 | img_url: '600x400' }}"
      alt="Description of Image 1"
      class="w-full h-full object-cover"
      loading="lazy">
    <a
      href="{{ section.settings.button_link1 }}"
      style="color:{{ settings.button_label1_color }}"
      class="absolute bottom-0 left-0">
      {{ section.settings.button_label1 }}</a>
  </div>

