<div
  class="flex flex-wrap">
  {% for collection in collections %}
    {% if collection.handle == 'all' %}
      {% continue %}
    {% endif %}

    {% assign image_id = collection.handle | append: '_image' %}
    {% assign image_url = section.settings[image_id] | img_url: 'medium' %}

    <!-- Each collection item -->
    <div
      class="w-1/4 relative">
      <img
      src="{{ image_url }}"
        alt="{{ collection.title }}"
        class="w-full">
      <!-- Collection title -->
      <a
        href="{{ collection.url }}"
        class="absolute top-0 left-0 bg-white text-black p-1">{{ collection.title }}</a>
    </div>
  {% endfor %}
</div>



