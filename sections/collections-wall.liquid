<div
  class="flex flex-wrap gap-4">

  {% for collection in collections %}
    <!-- Dynamically get the image URL based on collection -->
    {% assign image_url = collection.image | img_url: 'medium' %}

    <!-- Each collection item -->
    <div
      class="collection-item relative w-1/3 bg-cover bg-center"
      style="background-image: url('{{ image_url }}')">
      <!-- Collection title -->
      <h2
        class="absolute top-0 left-0 bg-black bg-opacity-50 text-white p-2">
        {{ collection.title }}
      </h2>
    </div>
  {% endfor %}


</div>


