<section class="w-full h-[95vh] grid grid-cols-2 border-b border-black p-0 m-0">
  <!-- Left content -->
  <div class="relative border-r border-black overflow-hidden h-full">
    <!-- Left Image -->
    <img
      src="{{ section.settings.image_left | img_url: '600x400' }}"
      alt="Description of Image"
      class="w-full h-full object-cover"
      loading="lazy">
    <a
      href="{{ section.settings.button_label_left_color }}"
      style="color:{{ section.settings.button_label_left_colo }}"
      class="absolute top-0 left-0 uppercase font-bold pt-2 pl-4">
      {{ section.settings.button_label_left }} >
    </a>
  </div>

  <!-- Right content -->
  <div class="relative box-border overflow-hidden h-full">
    <!-- Right Image -->
    <img
      src="{{ section.settings.image_right | img_url: '600x400' }}"
      alt="Description of Image"
      class="w-full h-full object-cover"
      loading="lazy">
    <a
      href="{{ section.settings.button_link_right }}"
      style="color:{{ section.settings.button_label_right_color }}"
      class="absolute top-0 left-0 uppercase font-bold pt-2 pl-4">
      {{ section.settings.button_label_right }}</a>
  </div>
</section>


{% schema %}
  {
    "name": "Two Image Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "image_left",
        "label": "Left Image"
      },
      {
        "type": "text",
        "id": "button_label_left",
        "label": "Left Button label"
      },
      {
        "type": "color",
        "id": "button_label_left_color",
        "label": "Left Button Label Color",
        "default": "#000"
      },
      {
        "type": "url",
        "id": "button_link_left",
        "label": "Left Button link"
      }, {
        "type": "image_picker",
        "id": "image_right",
        "label": "Right Image"
      }, {
        "type": "text",
        "id": "button_label_right",
        "label": "Right Button label"
      }, {
        "type": "color",
        "id": "button_label_right_color",
        "label": "Right Button Label Color",
        "default": "#000"
      }, {
        "type": "url",
        "id": "button_link_right",
        "label": "Right Button link"
      }
    ],
    "presets": [
      {
        "name": "Two Image Hero",
        "category": "Image"
      }
    ]
  }
{% endschema %}