<div class="max-w-md">
  <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
  <div class="my-4">
    <div class="text-base md:text-xl leading-normal">
      {{ section.settings.subheading }}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "404",
    "tag": "section",
    "class": "flex items-center justify-center text-center p-7 h-screen",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "404 heading title",
        "default": "404"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "404 subheading",
        "default": "Page not found"
      }
    ]
  }
{% endschema %}