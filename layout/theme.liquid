<!doctype html>
<html>

  <head>
    <title>{{ page_title }}</title>
    <meta
      charset="utf-8">
    <meta
      http-equiv="X-UA-Compatible"
      content="IE=edge,chrome=1">
    <meta
      name="description"
      content="{{ page_description | escape }}">
    <link
      rel="canonical"
      href="{{ canonical_url }}">
    <link
      rel="stylesheet"
      href="https://unpkg.com/swiper/swiper-bundle.min.css">

    <meta
      name="viewport"
      content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
    <script
      src="{{ 'application.js' | asset_url }}"
      async></script>

    <script
      src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

  </head>

  <body class="bg-gray-100 h-screen flex flex-col">
    <!-- Use flex layout on the body to allow child elements to stretch -->
    <header class="flex-shrink-0 h-[70px]">
      <!-- 10% of the viewport height and a color for visualization -->
      {% section 'header' %}
    </header>

    <main
      role="main"
      class="flex-grow">
      <!-- Flex-grow makes this element take up the remaining space -->
      {{ content_for_layout }}
    </main>

    <footer class="flex-shrink-0 h-100">
      <!-- 10% of the viewport height and a color for visualization -->
      {% section 'footer' %}
    </footer>
  </body>

</html>