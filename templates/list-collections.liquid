<!-- Parent container -->
<div
  class="flex flex-wrap gap-4">

  {% for collection in collections %}
    <!-- Each collection item -->
    <div
      class="collection-item relative w-1/4 bg-cover bg-center"
      style="background-image: url('{{ collection.image_url }}')">

      <!-- Collection title -->
      <h2
        class="absolute top-0 left-0 bg-black bg-opacity-50 text-white p-2">
        {{ collection.title }} {{ collection.image_url }}
      </h2>

    </div>
  {% endfor %}

</div>